<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sarahehabm.carbcalculator">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TestActivity"/>

        <provider
            android:name=".CarbCounterContentProvider"
            android:authorities="com.sarahehabm.carbcalculator"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".meal.view.NewMealActivity"
            android:label="@string/title_activity_new_meal"
            android:parentActivityName=".main.view.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sarahehabm.carbcalculator.main.view.MainActivity"/>
        </activity>
    </application>

</manifest>